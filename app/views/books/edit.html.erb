<h1>editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラー
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

<h4>title</h4>
  <%= f.text_field :title %>
<h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit '保存' %>
<% end %>

<%= link_to "show", book_path(@book.id) %>
|
<%= link_to "back", "/books" %>
